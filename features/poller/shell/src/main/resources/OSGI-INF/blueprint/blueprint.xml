<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

    <reference id="locationAwarePollerClient" interface="org.opennms.netmgt.poller.LocationAwarePollerClient" availability="mandatory"/>
    <reference id="servicePollerRegistry" interface="org.opennms.netmgt.poller.registry.api.ServicePollerRegistry" availability="mandatory"/>

    <bean id="pollerNameCompleter" class="org.opennms.netmgt.poller.shell.MonitorClassNameCompleter">
        <property name="servicePollerRegistry" ref="servicePollerRegistry" />
    </bean>

    <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
        <command name="poller/poll">
            <action class=" org.opennms.netmgt.poller.shell.Poll">
              <property name="locationAwarePollerClient" ref="locationAwarePollerClient"/>
            </action>
            <completers>
                <ref component-id="pollerNameCompleter"/>
                <null/>
            </completers>
        </command>
    </command-bundle>

</blueprint>
